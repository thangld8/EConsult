	<% include header.ejs %>
	<script>
		var myData = <%- JSON.stringify(result) %>;
	</script>
	<div class="section section-breadcrumbs">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h1>Các bài viết gần đây</h1>
				</div>
			</div>
		</div>
	</div>
	<div class="section section-no-padding">
		<div class="container">
			<div class="row">
				<!-- Featured News -->
				<div class="col-sm-9 featured-news">
					<!-- News -->
					<% result.data.forEach(function(data){%>
						<div class="row container">
								<div class="col-xs-4">
									<% if(data.embeddedLink.search("<iframe")>=0){ %>
										<iframe width="100%" height="100%" src="<%= data.embeddedLink.split("\"")[5] %>" frameborder="0" allowfullscreen></iframe>
									<%}else{%>
										<img src="<%= data.embeddedLink.split("\"")[1]%>" alt="Smiley face" height="100%" width="100%">	
									<%}%>
								</div>
								<div class="col-xs-8">
									<div class="caption"><h3><%=data.subject%></h3></div>
									<div class="date"><h5><%=data.createDate%></h5> </div>
									<div class="intro"><h4><%=data.content.substring(0, 140)%></h4>  <a>
										<form id="myForm" action="detailPage" method="get">
												<input type="hidden" name="pageID" value="<%=data._id%>">
												<button type="submit" class="btn btn-primary btn-lg">Đọc thêm...</button>											
										</form>
									</a></div>
								</div>
							</div>	
					<%});%>
					
					<hr>
					<div style="text-align: center;">
						<form id="myForm" action="newestNewsEvent" method="get" style="display:inline;">
							<input type="hidden" name="page" id="page" value="<%= result.prev %>" >
							<button type="text" class="btn" style="">&lt;&lt; Prev</button>
						</form>
						<form id="myForm" action="newestNewsEvent" method="get" style="display:inline;">
							<input type="hidden" name="page" id="page" value="<%= result.next %>" >
							<button type="text" class="btn" style="">Next &gt;&gt;</button>
						</form>
					</div>
					
					<hr>
				</div>
				<!-- End Featured News -->
				<!-- Latest News -->
				<div class="col-sm-3">
							
				</div>
				<!-- End Featured News -->
			</div>
		</div>
	</div>
	  <!-- Footer -->
	  <% include footer.ejs %>
